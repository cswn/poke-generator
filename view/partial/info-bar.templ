package partial

import "strconv"

templ InfoBar(id int, species string, height int, weight int) {
	<svg width="400" height="22" style="position: absolute; bottom: -2rem;" xmlns="http://www.w3.org/2000/svg">
		<rect width="100%" height="100%" fill="#b3bbbe"></rect>
		<text x="200" y="13" font-size="10" text-anchor="middle" fill="#3b3b3e" font-weight="bold">
			NO. { strconv.Itoa(id) }. { species }. HT: { strconv.Itoa(height) }. WT: { strconv.Itoa(weight) }lbs.
		</text>
	</svg>
}
